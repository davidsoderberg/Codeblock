# editorconfig.org
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.php]
indent_style = tab
indent_size = 4

[*.{js,json}]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false